<div class="m-3">
  <h1>New game</h1>
  <div class="d-flex text-center ">
    <% @letters.each do |letter| %>
      <p class="m-1 border bg-primary text-white letter shadow-sm"><%= letter %></p>
    <% end %>
  </div>
  <div class="my-3">
    <p>What's the longest word you can find?</p>
    <form class="d-flex input-group" action="score" method="post" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <input id="tags_list" name="tags_list" type="hidden" value=<%= @letters.join %>/>
      <input class="form-control" type="text" name="guess" >
      <input class="btn btn-outline-secondary" type="submit" value="Play">
    </form>
  </div>
</div>
